{
    "explorer.fileNesting.patterns": {
        "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata,devtools_options.yaml,codemagic.yaml,analysis_options.yaml,.tool-versions,flutter_jank_*.json,flutter_launcher_i*.yaml,flutter_*.png,flutter_native*.yaml,crowdin.yml,",
        "*.dart": "${capture}.event.dart,${capture}.state.dart"
    },
    // видимоcть файлов
    "files.exclude": {
        "**/*.g.*": true,
        "**/*.freezed.*": true,
        "**/ios/*": true,
        "**/android/*": false,
        "**/test/*": true,
        "**/.dart_tool": true,
        "**/.dart_frog": true,
        "**/pubspec.lock": true,
        "**/.flutter-plugins": true,
        "**/.flutter-plugins-dependencies": true,
        "**/.metadata": true,
        "**/devtools_options.yaml": true,
        "**/analysis_options.yaml": true,
        "**/flutter_jank_*.json": true,
        "**/flutter_launcher_i*.yaml": true,
        "**/flutter_*.png": true,
        "**/flutter_native*.yaml": true,
        "**/crowdin.yml": true,
        // "**/combined/*": true,
    },
    "cSpell.dictionaries": [
        "dart"
    ],
    //install extension Russian - Code Spell Checker
    "cSpell.language": "en,ru",
    "cSpell.words": [
        "checkpw",
        "daos",
        "gensalt",
        "googlesignin",
        "hashpw",
        "stagging"
    ],
    "cSpell.ignorePaths": [
        "vscode-extension", //
        ".git",
        "g.dart"
    ],
    "dart.lineLength": 120
}